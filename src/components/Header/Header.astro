<style>
	header{
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1rem 2rem;
		width: 100%;
		height: 10vh;
		position: fixed;
		z-index: 1000;
	}
	header img{
		width: 100px;
	}
	header > a{
		display: flex;
		align-items: center;
		justify-content: center;
		height: 100%;

	}
	nav {
		display: flex;
		align-items: center;
		justify-content: center;
		height: 100%;
		width: 50%;
	}
	nav ul{
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: 100%;
		width: 100%;
		gap: 1rem;
	}

	nav ul .link-card:first-child{
		display: none;
	}
	nav ul .link-card:last-child{
		border-radius: 50rem;
		border: 1px solid #FFFDF9;
		padding: 2% 2% 2% 10%;
		font-family: Dela Gothic One;
		background: #171717;
		width: 100%;

	}
	.link-card a{
		display: flex;
		justify-content: space-between;
	}
	/* .link-card svg{
		background-color: var(--white-bapps);
		border-radius: 50%;
		padding: 1%;
		width: 20px;
		height: 20px;
	} */
	.link-card img{
		width: 20px;
		height: 20px;
		/* filter: contrast(0) brightness(0) invert(1); */
		background-color: var(--white-bapps);
	}
	.link-card {
		list-style: none;
		display: flex;
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		color: white;
		align-items: center;

	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
	.icon-container{
		display: flex;
		align-items: center;
		justify-content: center;
		object-fit: contain;
		width: 35px;
		height: 35px;
		background-color: var(--white-bapps);
		border-radius: 50%;
		padding: 0;
	}
	.icon-container img{
		width: 50%;
		height: 50%;
	}

	@media (min-width: 768px) {
		nav {
			width: 40%;
		}
		nav ul{
			justify-content: flex-end;
		}
		nav ul .link-card:first-child{
			display: flex;
		}
		nav ul .link-card:last-child{
			width: 60%;
			padding-left: 5%;
		}
		h2{
			font-size: 1rem;
			font-weight: 300;
		}
		.icon-container{
			width: 30px;
			height: 30px;
		}
		.icon-container img{
			width: 40%;
			height: 40%;
		}
	}
</style>
