	<a href="/">
		<Image src={bappsLogo} alt="bapps logo" />
	</a>
	<nav>
		<ul>
			<li class="link-card">
				<a href='/'>
					<h2>
						HOME
					</h2>
				</a>
			</li>
			<li class="link-card">
				<a href='/contacto'>
					<h2>
						CONTACTO
					</h2>
